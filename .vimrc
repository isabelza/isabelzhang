set mouse=a

" See line numbers
set number

" Highlight search
set hlsearch

" Syntax highlighting
syntax on

" Visualbell when doing something wrong
set visualbell

" Indentation settings
set shiftwidth=2
set softtabstop=2
set expandtab

" Show current position
set ruler

" Search
set ignorecase

" Be smart abotu cases
set smartcase

" Modern browser search
set incsearch

" Colors
set t_Co=256
colorscheme desert

" utf8 as standard and en_us as standard language
set encoding=utf8

" Auto-indent, smart indent, wrap lines
set ai
set si
set wrap


